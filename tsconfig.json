{
    "compilerOptions": {
        "declaration": true,
        "lib": ["DOM", "es2015"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "strictNullChecks": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
